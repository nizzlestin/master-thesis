<form method="post" action="{{ path('app_repo_delete', {'id': repo.id}) }}" style="padding: 0px 0px; display: inline" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ repo.id) }}">
    <button class="btn-icon" type="submit"><i style="color: #fd514e" class="fa-solid fa-trash"></i></button>
</form>
